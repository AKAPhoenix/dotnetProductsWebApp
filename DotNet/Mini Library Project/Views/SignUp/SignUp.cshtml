@{
}
@{
    Layout = "~/Views/Shared/_LayoutSignUpForm.cshtml";
}
@model SignUp
<form asp-controller=SignUp asp-action=SignUp role="form">

    <div class="form-group">
        <label for="lastname">LastName</label>
        <input id="lastname" type="text" class="row" asp-for=Lastname />
        <span asp-validation-for=Lastname class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="firstname">Firstname</label>
        <input id="firstname" type="text" class="row" asp-for=Firstname />
        <span asp-validation-for=Firstname class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="username">Username</label>
        <input id="username" type="text" class="row" asp-for=UserName />
        <span asp-validation-for=UserName class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="text" class="row" asp-for=Password />
        <span asp-validation-for=Password class="text-danger"></span>
    </div>

    <button class="btn btn-primary" type=submit>Sign Up</button>
</form>
