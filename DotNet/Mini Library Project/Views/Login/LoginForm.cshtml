@model Login
<form asp-controller=Login asp-action=LoginForm role=form>
    <div class=form-group>
        <label for="username">Username</label>
        <input id="username" type="text" class=row asp-for=Username />
    </div>
    <div class="form-group">
        <label for="password">Password</label>
        <input id="password" type="text" class=row asp-for=Password />
    </div>

    <button class="btn btn-primary" type="submit">Login</button>
</form>
