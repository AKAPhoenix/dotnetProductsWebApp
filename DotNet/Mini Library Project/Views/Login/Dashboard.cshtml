@using Microsoft.AspNetCore.Identity
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
@inject UserManager<UserCredentials> usermanager
@model UserCredentials
@if(await usermanager.IsInRoleAsync(Model, "Admin")){
    <h2>Hi, @Model.UserName</h2>
    <div>
        <a asp-action="ManageRoles" asp-controller="Admin">Manage Roles</a>
    </div>
}
else{
    <div>Hi, @Model.UserName</div>
    <div class="container">
        <div>
            <a asp-controller=AboutRead asp-action=BooksAvailable>Books Available</a>
        </div>
        <div>
            <a asp-controller=AboutRead asp-action=CurrentlyReading>Books you are Currently Reading</a>
        </div>
        <div>
            <a asp-controller=AboutRead asp-action=AlreadyRead>Books Available</a>
        </div>
    </div>
}
