@inject UserManager<UserCredentials> _userManager
@inject AppDBContext<UserCredentials> _context
@{
    var users = _userManager.Users.Select(c=>c).ToList();
    var userss = _context.Users.Select(c=>c).ToList();
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@foreach (var us in users)
{
    <div>
        @us.UserName
        
    </div>
}
<br />
<br />
       <div class=row>
            <h3 class="col-lg-3 col-md-3">
                Username
            </h3>
            <h3 class="col-lg-3 col-md-3">
                Roles
            </h3>
       </div>
@foreach (var user in users)
{
    var roles=await _userManager.GetRolesAsync(user);
    string rls = string.Join(",", roles);
    var usn = user.Email;
       <div class=row>
            <div class="col-lg-3 col-md-3" >
                @usn
            </div>
            <div class="col-lg-3 col-md-3">
                @rls
            </div>
       </div>
}